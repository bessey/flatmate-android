<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash"
     >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical|center"
    android:orientation="vertical"
    tools:context=".SplashActivity" >

       <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contentDescriptionImage"
        android:src="@drawable/splashicon" />





    <LinearLayout
        android:id="@+id/loginBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/login_email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />


            <EditText
                android:id="@+id/emailTbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />


            <EditText
                android:id="@+id/passwordBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginButtonBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:visibility="visible" >

            <Button
                android:id="@+id/loginButton"
                style="@color/lightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />


            <Button
                android:id="@+id/registerButton"
                style="@color/lightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loginSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>





    <LinearLayout
        android:id="@+id/registerBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textView4"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_width="100dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />


            <EditText
                android:id="@+id/passwordBox2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/re_password"
                android:inputType="textPassword"
                android:textColor="@color/lightText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/FirstNameLabel"
                android:layout_width="100dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />



            <EditText
                android:id="@+id/firstBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:inputType="text"
                android:textColor="@color/lightText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lastNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/LastNameLabel"
                android:layout_width="100dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />


            <EditText
                android:id="@+id/lastBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/last_name"
                android:inputType="text"
                android:textColor="@color/lightText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/phoneLable"
                android:layout_width="100dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />


            <EditText
                android:id="@+id/phoneTextBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/phone_no"
                android:inputType="phone"
                android:textColor="@color/lightText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backNextButtons"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:visibility="visible" >

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/lightText" />

            <Button
                android:id="@+id/createButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/lightText" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/registerSpinner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>








    <LinearLayout
        android:id="@+id/flatBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Flat"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/lightText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >



            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Post Code"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />


            <EditText
                android:id="@+id/searchTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="Post Code"
                android:inputType="text|textPostalAddress"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                 />

            <Button
                android:id="@+id/searchButton"
                style="@color/lightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />


            <ProgressBar
                android:id="@+id/searchSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:descendantFocusability="beforeDescendants"
            android:drawSelectorOnTop="false"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >
        </ListView>




        <LinearLayout
            android:id="@+id/addFlatSpinner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >




            <Button
                android:id="@+id/newFlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Flat"
                android:textColor="@color/lightText" />

        </LinearLayout>

    </LinearLayout>
    








    <LinearLayout
        android:id="@+id/addFlatBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Flat"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/lightText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >


            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />




            <EditText
                android:id="@+id/flatNameInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="5"
                android:hint="Flat Nickname"
                android:inputType="text|textPostalAddress"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >




            <TextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Address"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />



            <EditText
                android:id="@+id/address1Text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="5"
                android:hint="Address Line 1"
                android:inputType="text|textPostalAddress"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Post Code"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />



            <EditText
                android:id="@+id/postCodeTextBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="Post Code"
                android:inputType="text|textPostalAddress"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/createButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            
            android:gravity="center_horizontal"
            android:paddingTop="30dp" >

            <Button
                android:id="@+id/newFlatBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/lightText" />

            <Button
                android:id="@+id/createFlatButton"
                style="@color/lightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Flat"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/createSpinnerBox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:visibility="gone"  >


            <ProgressBar
                android:id="@+id/createSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>
        
    
</LinearLayout>

    </ScrollView>
    </LinearLayout>

