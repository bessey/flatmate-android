<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/splash"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SplashActivity" >

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contentDescriptionImage"
        android:src="@drawable/splash_logo" />

    <LinearLayout
        android:id="@+id/loginBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/login_email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />

            <EditText
                android:id="@+id/emailTbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />

            <EditText
                android:id="@+id/passwordBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

            <requestFocus />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginButtonBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:visibility="visible" >

            <Button
                android:id="@+id/loginButton"
                style="@color/lightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

            <Button
                android:id="@+id/registerButton"
                style="@color/lightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loginSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/registerBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />

            <EditText
                android:id="@+id/passwordBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/re_password"
                android:inputType="textPassword"
                android:textColor="@color/lightText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/FirstNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />

            <EditText
                android:id="@+id/firstBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/first_name"
                android:inputType="text"
                android:textColor="@color/lightText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lastNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/LastNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />

            <EditText
                android:id="@+id/lastBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/last_name"
                android:inputType="text"
                android:textColor="@color/lightText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/phoneLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText" />

            <EditText
                android:id="@+id/phoneTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="@string/phone_no"
                android:inputType="phone"
                android:textColor="@color/lightText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flatButtonBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <Button
                android:id="@+id/flatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Find Flat"
                android:textColor="@color/lightText" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/lightText" />

            <TextView
                android:id="@+id/postcodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/lightText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/backNextButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:visibility="visible" >

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/lightText" />

            <Button
                android:id="@+id/createButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/lightText" />
        </LinearLayout>





        <ProgressBar
            android:id="@+id/registerSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/flatBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Flat"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/lightText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Post Code"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium"
                android:width="100dp" />

            <EditText
                android:id="@+id/searchTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="Post Code"
                android:inputType="text|textPostalAddress"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />

            <Button
                android:id="@+id/searchButton"
                style="@color/lightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/lightText"
                android:textSize="@dimen/Medium" />


            <ProgressBar
                android:id="@+id/searchSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:descendantFocusability="beforeDescendants"
            android:drawSelectorOnTop="false"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >
        </ListView>

    </LinearLayout>

</LinearLayout>